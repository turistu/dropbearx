#! /bin/sh
set -e
opt=
while :; do
	case $1 in
	-*)	opt=$opt${1#-};;
	*)	break;;
	esac
	shift
done
os=${1:-$(uname)}-$(uname -m)
case $0 in
/*)	srcdir=${0%/*}/..;;
*)	srcdir=$(pwd)
esac
outdir=$srcdir/OUT
bdir=$outdir/build-$os
pdir=$outdir/inst-$os
logfile=$outdir/dropbearx-$os-BUILD-LOG
case $opt in *n*);;*)	rm -fr "$bdir" "$pdir"; esac
mkdir -p "$bdir" "$pdir"
exec 3>&2
onexit(){
	err=$?
	exec >&3
	if [ "$err" = 0 ]; then
		echo "OK, $bdir done"
	else
		tail -n40 "$logfile"; echo FAILED
	fi
}
trap onexit EXIT
case $opt in *o*);;*)	exec >$logfile; esac
case $opt in *e*);;*)	exec 2>&1; esac
case $opt in *n*);;*)	autoreconf "$srcdir"; esac
cd "$bdir"
case $opt in *n*);;*)	"$srcdir/configure" --prefix="$pdir"; esac
make -j32 everything
# make check
make strip
make install-everything
tar -C "$pdir" -zcf "$outdir/dropbearx-$os.tgz" .
$srcdir/util/simple-test
